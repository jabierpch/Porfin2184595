<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Dosis:wght@300&display=swap" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/custom.css">
</head> 
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("INVE", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    <li>@Html.ActionLink("iniciar sesion", "Login", "Usuario")</li>

                    <li class="dropdown">

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Crud Usuario <span class="caret"></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Registrar</a></li>
                            <li><a href="#">Consultar</a></li>
                            <li><a href="#">Eliminar</a></li>
                        </ul>
                    </li>

                    <li class="dropdown">

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Carpetas <span class="caret"></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Cliente</a></li>
                            <li><a href="#">Compra</a></li>
                            <li><a href="#">Usuario</a></li>
                            <li><a href="#">UsuarioRol</a></li>
                        </ul>
                    </li>

                    <li class="dropdown">

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Producto <span class="caret"></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">ProductoCompra</a></li>
                            <li><a href="#">ProductoImagen</a></li>
                            <li><a href="#">Proveedor</a></li>
                            <li><a href="#">Roles</a></li>
                        </ul>
                    </li>

                    <li class="dropdown">

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Salir <span class="caret"></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Cerrar</a></li>
                        </ul>
                    </li>


                    @if (User.Identity.IsAuthenticated)


                    {
                        <li>@Html.ActionLink("Usuario", "index", "Usuario")</li>
                        <li>@Html.ActionLink("Proveedor", "Index", "Proveedor")</li>
                        <li>@Html.ActionLink("Producto", "index", "Producto")</li>
                        <li>@Html.ActionLink("Clientes", "index", "Clientes")</li>
                        <li>@Html.ActionLink("Roles", "Index", "Roles")</li>
                        <li>@Html.ActionLink("Compra", "index", "Compra")</li>
                        <li>@Html.ActionLink("Usuariorol", "index", "Usuariorol")</li>
                        <li>@Html.ActionLink("Productoimagen", "Index", "Productoimagen")</li>
                        <li>@Html.ActionLink("Producto Compra", "Index", "ProductoCompra")</li>
                        <li>@Html.ActionLink("Salir", "CloseSession", "Usuario")</li>
                    }

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>